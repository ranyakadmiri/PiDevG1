{% extends 'base_back.html.twig' %}

{% block title %}WeBuild - Assurance{% endblock %}



{% block body %}




  <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                   
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Assurances</h6>
                            <table class="table">
                                <thead>
                               
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">assurance</th>
                                        <th scope="col">description</th>
                                        <th scope="col">franchise </th>
                                      
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                     {% for assurance in assurances %}
                                        <th scope="row">{{assurance.id}}</th>
                                        <td>{{assurance.nom}}</td>
                                        <td>{{assurance.description}} </td>
                                        <td>{{assurance.franchise}} </td>
                                        <td><button type="button" class="btn btn-outline-danger m-2" onclick="window.location.href= '{{path('del_ass',{'id':assurance.id})}}' ">Supprimer</button> </td>
                                        <td><button type="button" class="btn btn-outline-warning m-2" onclick="window.location.href='{{ path('app_Edit', {'id': assurance.id}) }}'" >Modifier</button> </td>
                                            
                                
                                
                                    </tr>
                                    {% endfor %}
                                   
                                </tbody>
                            </table>
                            <button type="button" class="btn btn-outline-success m-2" onclick="window.location.href='{{ path('app_add') }}'">Ajouter</button> 
                        </div>
                 
                




{% endblock %}

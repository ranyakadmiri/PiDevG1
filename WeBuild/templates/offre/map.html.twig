{% extends 'base.html.twig' %}

{% block title %}Offers Map{% endblock %}
{% block styles %}
<style>
    .custom-btn {
        padding: 0.25rem 0.5rem;
        background-color: transparent;
        border: 1px solid transparent;
        color: black;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .custom-btn:hover {
        background-color: yellow;
    }
</style>
{% endblock %}
{% block body %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <style>
        #map { height: 600px; width: 900px;margin: 0 auto;  }
    </style>

    <div id="map"></div>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script>
        var map = L.map('map').setView([0, 0], 2); // Set initial map view

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        {% for offre in offres %}
            L.marker([{{ offre.latitude }}, {{ offre.longitude }}]).addTo(map)
                .bindPopup(`<b>{{ offre.title }}</b><br>Salary: {{ offre.salary }}DT</b>
                <b><a href="{{ path('app_AddCan') }}" class="btn btn-sm custom-btn">Postuler</a></b>`);
        {% endfor %}
    </script>
{% endblock %}

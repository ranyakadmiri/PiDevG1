{% extends 'base.html.twig' %}

{% block title %}From{% endblock %}

{% block body %}
    <template class="reply-input-template">
        <div class="reply-input container-form">
            <img src="{{ asset('front/images/avatars/rasl7am.webp') }}" alt="" class="usr-img">
            <textarea class="cmnt-input" placeholder="Add a comment..."></textarea>
            <button class="bu-primary">SEND</button>
        </div>
    </template>

    <template class="comment-template">
        <div class="comment-wrp">
            <div class="comment container-form">
                <div class="c-score">
                    <img src="{{ asset('front/images/icon-plus.svg') }}" alt="plus" class="score-control score-plus">
                    <p class="score-number">5</p>
                    <img src="{{ asset('front/images/icon-minus.svg') }}" alt="minus" class="score-control score-minus">
                </div>
                <div class="c-controls">
                    <a  class="delete"><img src="{{ asset('front/images/icon-delete.svg') }}" alt="" class="control-icon">Delete</a>
                    <a  class="edit"><img src="{{ asset('front/images/icon-edit.svg') }}" alt="" class="control-icon">Edit</a>
                    <a  class="reply"><img src="{{ asset('front/images/icon-reply.svg') }}" alt="" class="control-icon">Reply</a>
                </div>
                <div class="c-user">
                    <img src="{{ asset('front/images/avatars/rasl7am.webp') }}" alt="" class="usr-img">
                    <p class="usr-name">maxblagun</p>
                    <p class="cmnt-at">2 weeks ago</p>
                </div>
                <p class="c-text">
                    <span class="reply-to"></span>
                    <span class="c-body"></span>
                </p>
            </div><!--comment-->
            <div class="replies comments-wrp">
            </div><!--replies-->
        </div>
    </template>
    <main>
        <div class="comment-section">

            <div class="comments-wrp">

            </div> <!--commentS wrapper-->
            <div class="reply-input container-form">
                <img src="{{ asset('front/images/avatars/image-juliusomo.webp') }}" alt="" class="usr-img">
                <textarea class="cmnt-input" placeholder="Add a comment..."></textarea>
                <button class="bu-primary">SEND</button>
            </div> <!--reply input-->
        </div> <!--comment sectio-->

        <div class="modal-wrp invisible">
            <div class="modal container-form">
                <h3>Delete comment</h3>
                <p>Are you sure you want to delete this comment? This will remove the comment and cant be undone</p>
                <button class="yes">YES,DELETE</button>
                <button class="no">NO,CANCEL</button>
            </div>
        </div>
    </main>
{% endblock %}

{% block title %}WeBuild-Projects{% endblock %}

{% block stylesheets %}
    <style>
        /* Table Styles */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            font-family: Arial, sans-serif;
            border: 2px solid #ddd;
            border-radius: 8px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            color: #444;
        }

        th {
            background-color: #f7f7f7;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 14px;
        }

        /* Table Body Styles */
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        /* Table Hover Effect */
        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
{% endblock %}

{% block body %}
   <h1 style="color: #333; margin-bottom: 20px;">Devis: demande de couverture "{{demande.Assurance.nom}}" </h1>
   <h2 style="color: #333; margin-bottom: 20px;">Client:XXXXXXXX </h2>
     <h2 style="color: #333; margin-bottom: 20px;">Cin:XXXXXXXX</h2>
   <table>
       <thead>
           <tr>
               <th scope="col">#</th>
               <th scope="col">Assurance</th>
               <th scope="col">Montant approuvé:</th>
               <th scope="col">Date de début de la couverture:</th>
               <th scope="col">Date fin de la couverture:</th>
           </tr>
       </thead>
       <tbody>
          
               <tr>
                <th scope="row" style="color: #666;">{{demande.idD}}</th>
                   <th scope="row" style="color: #666;">{{demande.Assurance.nom}}</th>
                   <td style="color: #333; font-weight: bold;">{{demande.Montant}}</td>
                   <td style="color: #007bff;">{{ demande.dateDebut | date('d-m-Y')}}</td>
                   <td style="color: #007bff;">{{ demande.dateFin | date('d-m-Y')}}</td>
               </tr>
         
       </tbody>
   </table>
    <h2 style="color: #333; margin-bottom: 20px;">Signature du gérant: </h2>
{% endblock %}

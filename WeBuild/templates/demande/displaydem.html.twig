{% extends 'base.html.twig' %}
{% block title %}WeBuild - Depot demande{% endblock %}

    
            
      {% block body %}         
                
             
          <!-- Testimonial Start -->
    <div class="container-fluid testimonial py-5 mb-5">
        <div class="container">
            <div class="text-center mx-auto pb-5 wow fadeIn" data-wow-delay=".3s" style="max-width: 600px;">
                <h1 class="text-primary">Votre demande a bien été enregistrer</h1>
                <h5>Mes demandes:</h5>
            </div>
            <div class="owl-carousel testimonial-carousel wow fadeIn" data-wow-delay=".5s">
             {% for demande in demandes %}
                <div class="testimonial-item border p-4">
                    <div class="d-flex align-items-center">
                        <div class="">
                            <img src="{{ asset ('front/img/testimonial-1.jpg')}}" alt="">
                        </div>
                        <div class="ms-4">
                            <h4 class="text-secondary">{{demande.Assurance.nom}}</h4>
                            <p class="m-0 pb-3">{{demande.Montant}}</p>
                            <div >
                                
                           
                        </div>
                        </div>
                    </div> 
                    <div class="border-top mt-4 pt-3">
                {% if demande.status == true %}
                        <p class="mb-0">Approved</p>
                        <div> <a href="{{ path('app_pdf_generator', {'id': demande.idD}) }}" class="btn btn-secondary text-white px-5 py-3 rounded-pill" >Imprimer Devis</a> </div>
                           {% else %}  
                            <p class="mb-0">Pending</p>
                           {% endif %}
                    </div>
                </div>
                   {% endfor %}
               
            </div>
        </div>
    </div>

    <!-- Testimonial End -->      
      

{% endblock %}
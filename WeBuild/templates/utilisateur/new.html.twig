{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <style>
        /* CSS styles for the registration form */
        .registration-form {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Adjust as needed */
        }

        .sp-input {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .form-error {
            color: red;
            font-size: 12px;
        }

        .submit-btn {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .submit-btn:hover {
            background-color: #0056b3;
        }

        table {
            width: 100%;
            max-width: 500px; 
            border-collapse: collapse;
        }

        table tr {
            border-bottom: 1px solid #ddd;
        }

        table td {
            padding: 10px;
        }
        .form-error {
            color: red;
            font-size: 12px;
            font-weight: bold; 
           
        }
    </style>

    <div class="registration-form">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <table>
                <tr>
                    <td>{{ form_label(form.nom, "Nom") }}</td>
                    <td>{{ form_widget(form.nom, {'attr': {'class': 'sp-input'}}) }}</td>
                    <td colspan="2" class="form-error">{{ form_errors(form.nom) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.prenom, "Pr√©nom") }}</td>
                    <td>{{ form_widget(form.prenom, {'attr': {'class': 'sp-input'}}) }}</td>
                    <td colspan="2" class="form-error">{{ form_errors(form.prenom) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.cin, "CIN") }}</td>
                    <td>{{ form_widget(form.cin, {'attr': {'class': 'sp-input'}}) }}</td>
                    <td colspan="2" class="form-error">{{ form_errors(form.cin) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.fonction, "Fonction") }}</td>
                    <td>{{ form_widget(form.fonction, {'attr': {'class': 'sp-input'}}) }}</td>
                    <td colspan="2" class="form-error">{{ form_errors(form.fonction) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.email, "Email") }}</td>
                    <td>{{ form_widget(form.email, {'attr': {'class': 'sp-input'}}) }}</td>
                    <td colspan="2" class="form-error">{{ form_errors(form.email) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.mot_de_passe, "Mot de passe") }}</td>
                    <td>{{ form_widget(form.mot_de_passe, {'attr': {'class': 'sp-input'}}) }}</td>
                    <td colspan="2" class="form-error">{{ form_errors(form.mot_de_passe) }}</td>
                </tr>
                 <tr>
                    <td>{{ form_label(form.equipe, "equipe") }}</td>
                    <td>{{ form_widget(form.equipe, {'attr': {'class': 'sp-input'}}) }}</td>
                    <td colspan="2" class="form-error">{{ form_errors(form.equipe) }}</td>
                </tr>
            
            </table>

                
                {{ form_widget(form.save, {'attr': {'class': 'submit-btn'}}) }}
                
                {{form_end(form)}}
               
                </div>
{% endblock %}
